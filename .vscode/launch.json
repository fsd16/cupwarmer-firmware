    "version": "0.2.0",
    "configurations": [{
        "name": "AVR-GCC Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}",
        "cwd": "${workspaceFolder}",
        "externalConsole": true,
        "MIMode": "gdb",
        "miDebuggerPath": "avr-gcc",
        "miDebuggerArgs": "-ex 'target remote localhost:4242'",
        "preLaunchTask": "AVR-GCC Build"
    }
    ]
}